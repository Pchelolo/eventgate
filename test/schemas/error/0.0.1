title: error
description: Represents an error
$schema: http://json-schema.org/draft-04/schema#
$id: /error/0.0.1
type: object
properties:
  # global event fields
  meta:
    type: object
    properties:
      stream_name:
        type: string
        description: the stream name this message should be produced to.
        minLength: 1
      schema_uri:
        type: string
        description: >
          The URI identifying the jsonschema for this event. This may be just
          a short uri containing only the name and revision at the end of the
          URI path.  e.g. schema_name/12345 is acceptable. This field is not
          required.
    required:
    - stream_name
  # event-specific fields
  raw_event:
    type: string
    description: string encoded original event
  message:
    type: string
    description: message describing an error
  stack:
    type: string
    description: stack trace of the error (optional)
  triggered_by:
    type: string
    description: >
      comma-separated list of event descriptions in `<topic>:<uri>` format,
      that represent a chain of events that caused this event to be emitted.
required:
- meta
- emitter_id
- raw_event
- message
